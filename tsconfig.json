{
  "compileOnSave": false,
  "compilerOptions": {
    "moduleResolution": "node",
    "lib": ["es2020"],
    "target": "es2018",
    "module": "commonjs",
    "declaration": true,
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "sourceMap": false,
    "outDir": "./dist",
    "skipLibCheck": true,
  },
  "include": ["./src"]
}
